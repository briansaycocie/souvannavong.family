<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# Primary Meta Tags #}
  <title>{{ title or site.name }}</title>
  <meta name="title" content="{{ title or site.name }}">
  <meta name="description" content="{{ description or site.description }}">
  <meta name="keywords" content="{{ keywords or site.keywords | join(', ') }}">
  <meta name="author" content="{{ site.author }}">

  {# Canonical URL #}
  <link rel="canonical" href="{{ page.url | absoluteUrl(site.url) }}">

  {# Open Graph / Facebook #}
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ page.url | absoluteUrl(site.url) }}">
  <meta property="og:title" content="{{ title or site.name }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:image" content="{{ image or site.social.image | absoluteUrl(site.url) }}">
  <meta property="og:locale" content="{{ site.locale }}">
  <meta property="og:site_name" content="{{ site.name }}">

  {# Twitter Card #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="{{ page.url | absoluteUrl(site.url) }}">
  <meta name="twitter:title" content="{{ title or site.name }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  <meta name="twitter:image" content="{{ image or site.social.image | absoluteUrl(site.url) }}">

  {# Additional SEO #}
  <meta name="robots" content="index, follow">
  <meta name="language" content="English">
  <meta name="revisit-after" content="7 days">
  <link type="text/plain" rel="author" href="/humans.txt">

  {# Structured Data - JSON-LD #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{ site.name }}",
    "description": "{{ site.description }}",
    "url": "{{ site.url }}",
    "inLanguage": "{{ site.language }}",
    "copyrightYear": {{ "now" | currentYear }},
    "author": {
      "@type": "Organization",
      "name": "{{ site.organization.name }}",
      "description": "{{ site.organization.description }}",
      "foundingDate": "{{ site.organization.foundingDate }}"
    }
  }
  </script>

  {% if structuredData %}
  <script type="application/ld+json">
  {{ structuredData | safe }}
  </script>
  {% endif %}

  <link rel="stylesheet" href="/css/style.css?v={{ site.version }}">

  {# Plausible Analytics - Privacy-respecting, cookieless analytics #}
  {# Uncomment and configure after setting up Plausible (self-hosted or cloud) #}
  {# Replace YOUR_DOMAIN with souvannavong.family #}
  {# Replace YOUR_PLAUSIBLE_DOMAIN with your Plausible instance domain #}
  {# <script defer data-domain="YOUR_DOMAIN" src="https://YOUR_PLAUSIBLE_DOMAIN/js/script.js"></script> #}
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <header class="header" role="banner">
    <div class="container">
      <button class="header__toggle" aria-label="Toggle navigation menu" aria-expanded="false" aria-controls="sidebar-nav">
        â˜°
      </button>
      <a href="/" class="header__title">The Souvannavong Family</a>
    </div>
  </header>

  <div class="sidebar__backdrop" aria-hidden="true"></div>

  <div class="layout">
    <aside class="sidebar" id="sidebar-nav" role="navigation" aria-label="Section navigation">
      <div class="sidebar__content">
        <nav aria-labelledby="sections-heading">
          <h3 id="sections-heading">Sections</h3>
          <ul class="sidebar__nav-list" role="list">
            {% for item in navigation.sections %}
            <li role="listitem" {% if item.url.split('/').length > 4 %}class="sidebar__nav-list-child"{% endif %}><a href="{{ item.url }}">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        </nav>

        <nav aria-labelledby="appendices-heading">
          <h3 id="appendices-heading">Appendices</h3>
          <ul class="sidebar__nav-list" role="list">
            {% for item in navigation.appendices %}
            <li role="listitem"><a href="{{ item.url }}">{{ item.title }}</a></li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </aside>

    <main id="main-content" class="container content" role="main" aria-label="Main content">
      {% if page.url != "/" and (content | extractH1) %}
      <h1>{{ content | extractH1 | safe }}</h1>
      <div class="content__meta">
        <p class="content__last-updated">
          <span class="content__last-updated-label">Last updated:</span>
          <time datetime="{{ page.inputPath | gitLastModified }}">{{ page.inputPath | gitLastModified }}</time>
        </p>
      </div>
      {{ content | removeH1 | safe }}
      {% else %}
      {{ content | safe }}
      {% endif %}
    </main>
  </div>

  <footer class="footer" role="contentinfo">
    <div class="container">
      <p>Compiled from family-held artifacts, photographs, oral history, and international archival sources</p>
      <p>
        <a href="/disclaimer/" class="footer__link">Disclaimer</a> |
        <a href="/contact/" class="footer__link">Contact</a> |
        &copy; 2026 Souvannavong Family
      </p>
    </div>
  </footer>

  <script src="/js/navigation.js?v={{ site.version }}"></script>
  <script src="/js/email.js?v={{ site.version }}"></script>
</body>
</html>
